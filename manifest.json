{
  "manifest_version": 3,
  "name": "Re: Minder", 
  "version": "0.0.4",
  "description": "Your friendly task reminder and mental health support animal",
  "permissions": [
    "scripting", 
    "webNavigation", 
    "storage", 
    "notifications", 
    "storage", 
    "alarms"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [  
  {
    "matches": ["<all_urls>"],
    "js": ["main.js"],
    "css": ["bulma.min.css"]
  }
]
}